CC=icc
CFLAGS=-std=c++11 -O0 -I${TACC_PAPI_INC} -Iinclude

.PHONY: all clean

all: clean cts cts_p

cts:
	$(CC) $(CFLAGS) src/cts.cpp src/ctsMain.cpp -o bin/cts

cts_p:
	$(CC) $(CFLAGS) src/cts.cpp src/ctsMainPAPI.cpp -o bin/cts_p ${TACC_PAPI_LIB}/libpapi.a

clean:
	rm -rf bin/
	mkdir -p bin
